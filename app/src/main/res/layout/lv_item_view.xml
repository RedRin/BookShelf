<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/book_view"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="6dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="0dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/book_cover_default"
            android:contentDescription="书籍封面"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txt_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_alignTop="@id/img_book"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="4dp"
            android:paddingBottom="5dp"
            android:text="敏捷开发"
            android:textStyle="bold"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="4dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/txt_book_title"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/txt_book_info"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="16dp"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/txt_book_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10sp"
                android:text="2010-12"
                android:gravity="right"
                android:textColor="@color/colorSecondaryText"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
